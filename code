#include <iostream>
#include <Windows.h>
#include <string>

using namespace std;

int main()
{
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);
    int choise;
    cout << "1" "\n";
    cout << "2" "\n";
    cout << "Выберите задание" "\n";
    cin >> choise;

    if (choise == 1)
    {
        int a;
        int b;
        int c;
        int d;
        int max;
        int min;
        cout << "Введите ваши числа через пробел: ";
        cin >> a >> b >> c >> d;
        max = a;
        min = a;
        if (b > max)
        {
            max = b;
        }
        if (c > max)
        {
            max = c;
        }
        if (d > max)
        {
            max = d;
        }


        if (d < min)
        {
            min = d;
        }
        if (b < min)
        {
            min = b;
        }
        if (c < min)
        {
            min = c;
        }
        cout << "Максимальное число: " << max << "\n";
        cout << "Минимальное число: " << min;
    }
}
